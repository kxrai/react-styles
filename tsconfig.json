{
  "compilerOptions": {
    "target": "es5",                 // Specify ECMAScript target version
    "module": "esnext",              // Specify module code generation method
    "lib": ["dom", "dom.iterable", "esnext"], // Specify library files to be included in the compilation
    "allowJs": true,                 // Allow JavaScript files to be compiled
    "skipLibCheck": true,            // Skip type checking of all declaration files (*.d.ts)
    "esModuleInterop": true,         // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true,                  // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "moduleResolution": "node",      // Resolve modules using Node.js-style
    "resolveJsonModule": true,       // Allow importing JSON modules
    "isolatedModules": true,         // Ensure that each file can be transpiled independently
    "noEmit": true,                  // Do not emit outputs (if you're using something like Babel as a compiler or Webpack to bundle)
    "jsx": "react-jsx",              // Support JSX in .tsx files
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
    "baseUrl": "./",                 // Base directory to resolve non-relative module names
    "outDir": "./dist",              // The output directory for all emitted files
    "types": ["react"]               // Specify type package names to be included without being referenced in a source file
  },
  "include": [
    "src/**/*"                       // Include all files in the src directory
  ],
  "exclude": [
    "node_modules",                  // Exclude this directory in the compilation process
    "**/*.spec.ts",                  // Exclude all test files
    "**/*.test.ts",                  // Exclude all test files
    "**/*.spec.tsx",                 // Exclude all test files
    "**/*.test.tsx"                  // Exclude all test files
  ]
}
